# Application
PORT=3000
APP_BASE_URL=http://localhost:3000

# JWT
JWT_SECRET=supersecret
JWT_REFRESH_SECRET=refreshsecret

# Redis
REDIS_URL=redis://localhost:6379

# Email Service (Choose one and fill in details)
EMAIL_PROVIDER=NODEMAILER # Options: NODEMAILER, MAILGUN, SENDGRID, RESEND
SENDER_EMAIL=noreply@example.com

# Nodemailer (if EMAIL_PROVIDER=NODEMAILER)
NODEMAILER_SMTP_HOST=smtp.example.com
NODEMAILER_SMTP_PORT=587
NODEMAILER_SMTP_USER=user@example.com
NODEMAILER_SMTP_PASS=your_email_password

# Mailgun (if EMAIL_PROVIDER=MAILGUN)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# SendGrid (if EMAIL_PROVIDER=SENDGRID)
SENDGRID_API_KEY=your_sendgrid_api_key

# Resend (if EMAIL_PROVIDER=RESEND)
RESEND_API_KEY=your_resend_api_key

# OAuth2
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

APPLE_CLIENT_ID=YOUR_APPLE_CLIENT_ID
APPLE_TEAM_ID=YOUR_APPLE_TEAM_ID
APPLE_KEY_ID=YOUR_APPLE_KEY_ID
APPLE_PRIVATE_KEY=YOUR_APPLE_PRIVATE_KEY
APPLE_REDIRECT_URI=http://localhost:3000/auth/apple/callback

# Payment Gateways (Choose one for each type and fill in details)

# Local Payment Provider (e.g., Midtrans, Xendit, Doku, Faspay)
LOCAL_PAYMENT_PROVIDER=MIDTRANS # Options: MIDTRANS, XENDIT, DOKU, FASPAY

# Midtrans (if LOCAL_PAYMENT_PROVIDER=MIDTRANS)
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IRIS_KEY=your_midtrans_iris_key

# Xendit (if LOCAL_PAYMENT_PROVIDER=XENDIT)
XENDIT_SECRET_KEY=your_xendit_secret_key

# Doku (if LOCAL_PAYMENT_PROVIDER=DOKU)
DOKU_CLIENT_ID=your_doku_client_id
DOKU_SHARED_KEY=your_doku_shared_key

# Faspay (if LOCAL_PAYMENT_PROVIDER=FASPAY)
# Add Faspay specific environment variables here if needed

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox # Options: sandbox, live

# Crypto Payment Provider (e.g., CoinGate, Coinbase, BitPay)
CRYPTO_PAYMENT_PROVIDER=COINGATE # Options: COINGATE, COINBASE, BITPAY

# CoinGate (if CRYPTO_PAYMENT_PROVIDER=COINGATE)
# Add CoinGate specific environment variables here if needed

# Coinbase (if CRYPTO_PAYMENT_PROVIDER=COINBASE)
# Add Coinbase specific environment variables here if needed

# BitPay (if CRYPTO_PAYMENT_PROVIDER=BITPAY)
# Add BitPay specific environment variables here if needed

# Amazon Pay
# Add Amazon Pay specific environment variables here if needed

# Apple Pay
# Add Apple Pay specific environment variables here if needed

# Google Pay
# Add Google Pay specific environment variables here if needed

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/database?schema=public"
